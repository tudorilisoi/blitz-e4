{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "src/*": ["./src/*"]
    },
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "isolatedModules": false,
    "noEmit": false
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.e2e.ts", "cypress", "**/*.test.ts", "**/*.test.tsx"]
}
